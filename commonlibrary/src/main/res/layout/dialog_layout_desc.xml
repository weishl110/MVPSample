<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_round_whtie_bg2"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            style="@style/nomalPadding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/value_8dp"
            android:orientation="vertical">
            <!-- title部分 -->
            <TextView
                android:id="@+id/dialog_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_dialog_bottom_line"
                android:gravity="center"
                android:paddingBottom="@dimen/value_10dp"
                android:text="title"
                android:textColor="@color/color_999999"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="desssss"
                android:textColor="@color/color_999999"
                android:textSize="14sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1px"
            android:background="@color/color_8a8a8a"/>

        <LinearLayout
            style="@style/nomalPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_1px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/value_20px"
                android:text="立即升级"
                android:textColor="@color/color_ff5100"
                android:textSize="16sp"
                android:visibility="visible"/>

            <TextView
                android:layout_width="@dimen/value_1px"
                android:layout_height="match_parent"
                android:background="@color/color_8a8a8a"/>

            <TextView
                android:id="@+id/dialog_tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/value_20px"
                android:text="取消"
                android:textColor="@color/color_666666"
                android:textSize="16sp"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>