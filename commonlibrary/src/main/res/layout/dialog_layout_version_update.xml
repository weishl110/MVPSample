    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_1px"
            android:background="@color/color_8a8a8a"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/value_20px"
                android:textColor="@color/color_ff5100"
                android:textSize="16sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/dialog_textView_segment"
                android:layout_width="@dimen/value_1px"
                android:layout_height="match_parent"
                android:background="@color/color_8a8a8a"/>

            <TextView
                android:id="@+id/dialog_tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
