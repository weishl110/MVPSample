<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white"/>
            <stroke
                android:width="@dimen/value_1px"
                android:color="@color/color_8a8a8a"/>
            <corners android:bottomRightRadius="@dimen/value_20dp"/>
        </shape>
    </item>
    <item android:top="@dimen/value_1px">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white"/>
            <corners android:bottomLeftRadius="20dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="@dimen/value_10dp"
                android:top="@dimen/value_10dp"/>
        </shape>
    </item>

</layer-list>